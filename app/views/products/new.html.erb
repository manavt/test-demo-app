<% if @product.errors.full_messages.any? %>
<ul>
  <% @product.errors.full_messages.each do |error_message| %>
    <li><%= error_message %> </li>
  <% end %>
  </ul>
<% end %>

<%= form_for @product do | f| %>
  <table class="table table-striped">
    <tr>
        <td><%= f.label :name%></td>
        <td><%= f.text_field :name%></td>
      </tr>
        <tr>
          <td><%= f.label :brand%></td>
          <td><%= f.text_field :brand%></td>
      </tr>
      <tr>
        <td><%= f.label :size%></td>
        <td><%= f.select :size, %w(M S L XL XXL)%></td>
    </tr>
    <tr>
      <td><%= f.label :price%></td>
      <td><%= f.text_field :price%></td>
    </tr>
    <tr>
      <%= f.fields_for :images  do | im |%>
        <td><%= im.label :photo%></td>
        <td><%= im.file_field :photo, multiple: true%></td>
      <%end%>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "Add Product"%></td>
    </tr>
  </table>
<%end%>

